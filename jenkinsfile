pipeline {
    agent any
    
    tools {
        terraform 'terraform'
    }
    stages {
        stage ("checkout from GIT") {
            steps {
                git branch: 'master', url: 'https://github.com/Chaigitsy-1/DelloiteDevops.git'
            }
        }
        stage ("terraform init") {
            steps {
                sh 'terraform init'
            }
        }
       
      
        stage ("terrafrom plan") {
            steps {
                sh 'terraform plan '
            }
        }
        stage ("terraform apply") {
            steps {
                sh 'terraform apply --auto-approve'
            }
        }
    }
}
